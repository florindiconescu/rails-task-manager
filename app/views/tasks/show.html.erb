<h1>Selected Task</h1>
<h2><%= @task.title %></h2>
<%= link_to 'Edit task', edit_task_path %>
<h4><%= @task.details %></h4>
<% if @task.completed == true %>
  <p><input type="checkbox" checked> This task is completed</p>
<% else %>
  <p><%= check_box_tag 'task_id', @task.completed %> This task is not completed yet</p>
<% end %>
<%= link_to 'Back to the list', tasks_path %>

